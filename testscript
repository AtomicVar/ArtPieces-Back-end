# The test script of the GraphQL server

# Sign up a new users - singUp
mutation{
  signUp(email: "msn4399@163.com", nick_name:"Guoshuai", password:"PFHDSJD")
}

# Upload a new work - uploadNewWork
mutation{
  uploadNewWork(user_id: 1, data: [{a:3}], title:"fucker", description:"damn it", is_pub:true, type: PLAIN)
}

# Update a user's infomation - updateUserInfo
mutation{
  updateUserInfo(user_id:1, nick_name:"bitch"){
    nick_name
  }
}

# Update a work's infomation - updateWorkInfo
mutation{
  updateWorkInfo(work_id:1, title:"niggaz"){
    title
    description
  }
}

# Query a work's infomation - getWorkInfo
query{
  getWorkInfo(work_id:1){
    title
    data
  }
}

# Query a user's infomation - getUserInfo
query{
  getUserInfo(user_id:1){
    nick_name
  }
}

# Query a user's all works - getUserWorks
query{
  getUserWorks(user_id: 1){
    title
    data
  }
}